{
	"fileTypes": [
		"java"
	],
	"injectionSelector": "L:meta.embedded.block.html meta.property-value.css",
	"injections": {
		"L:source": {
			"patterns": [
				{
					"match": "<",
					"name": "invalid.illegal.bad-angle-bracket.html"
				}
			]
		}
	},
	"patterns": [
		{
			"begin": "(.?(css))(\"\"\")",
			"end": "(\"\"\")",
			"beginCaptures": {
				"1": {
					"name": "variable.parameter"
				}
			},
			"patterns": [
				{
					"include": "source.css"
				}
			]
		},
		{
			"begin": "(\\s?\\/?\\*?\\s?(css|inline-css)\\s?\\*?\\/?\\s?)(\"\"\")",
			"beginCaptures": {
				"1": {
					"name": "comment.block"
				}
			},
			"end": "(\"\"\")",
			"patterns": [
				{
					"include": "source.css"
				}
			]
		},
		{
			"begin": "(?<=\\=|\\:)\\s+(\\/\\/\\s?(css|inline-css)\\s?$)",
			"beginCaptures": {
				"1": {
					"name": "comment.line"
				}
			},
			"end": "(\"\"\")",
			"patterns": [
				{
					"begin": "(\\G)",
					"end": "(\"\"\")"
				},
				{
					"include": "source.css"
				}
			]
		}
	],
	"scopeName": "inline.java-css"
}